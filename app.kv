Manager:
	LoginScreen:
		name: 'log'
	RegisterScreen:
		name: 'reg'
	BookScreen:
		id: book
		name: 'book'

<BookScreen>:
	pos: root.pos
	size: root.size
	GridLayout:
		cols: 2
		padding: 25
		spacing: 15
		cols_minimum: {0: 400, 1: 100}
		BoxLayout:
			id: bl
			canvas:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					pos: self.pos
					size: self.size
			orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			Button:
				text: 'Add contact'
				on_release: root.add_contact()
			Button:
				text: 'Logout'
				on_release: root.logout()

<RegisterScreen>:
	GridLayout:
		cols: 2
		Label:
			canvas.before:
				Color:
					rgba: 0.2,0.2,0.7,1
				Rectangle:
					pos: self.pos
					size: self.size
			text_size: self.size
			halign: 'right'
			color: 1, 1, 0, 1
			size_hint_y: None
			height: 50
			font_size: 30
			text: 'Choose user name: '
		TextInput:
			id: user_name
			size_hint_y: None
			height: 50
			font_size: 20
			multiline: False
			text: 'user id'
		Label:
			canvas.before:
				Color:
					rgba: 0.2,0.2,0.7,1
				Rectangle:
					pos: self.pos
					size: self.size
			text_size: self.size
			halign: 'right'
			color: 1, 1, 0, 1
			size_hint_y: None
			height: 50
			font_size: 30
			text: 'Password: '
		TextInput:
			id: password1
			size_hint_y: None
			height: 50
			font_size: 20
			password: True
			multiline: False
			text: ''
		Label:
			canvas.before:
				Color:
					rgba: 0.2,0.2,0.7,1
				Rectangle:
					pos: self.pos
					size: self.size
			text_size: self.size
			halign: 'right'
			color: 1, 1, 0, 1
			size_hint_y: None
			height: 50
			font_size: 30
			text: 'Retype password: '
		TextInput:
			id: password2
			size_hint_y: None
			height: 50
			font_size: 20
			password: True
			multiline: False
			text: ''
	Button:
		pos: root.center_x - self.width // 2 , root.center_y - 120
		font_size: 35
		size_hint: None, None
		width: 200
		height: 75
		text: 'Cancel'
		on_press: app.root.current = 'log'
	Button:
		center: root.center
		font_size: 35
		size_hint: None, None
		width: 200
		height: 75
		text: 'Submit'
		on_press: root.register(user_name.text, password1.text, password2.text)

<LoginScreen>:
	GridLayout:
		size_hint: None, None
		center: self.parent.center
		size: root.width * 0.8, self. height
		cols: 2
		Label:
			canvas.before:
				Color:
					rgba: 0.2,0.2,0.7,1
				Rectangle:
					pos: self.pos
					size: self.size
			halign: 'right'
			color: 1, 1, 0, 1
			size_hint: None, None
			width: 200
			height: 50
			font_size: 30
			text: 'Login: '
		TextInput:
			id: login
			size_hint_y: None
			height: 50
			font_size: 20
			multiline: False
			text: 'user id'
		Label:
			canvas.before:
				Color:
					rgba: 0.2,0.2,0.7,1
				Rectangle:
					pos: self.pos
					size: self.size
			text_size: self.size
			halign: 'right'
			color: 1, 1, 0, 1
			size_hint: None, None
			width: 200
			height: 50
			font_size: 30
			text: 'Password: '
		TextInput:
			id: password
			size_hint_y: None
			height: 50
			font_size: 20
			password: True
			multiline: False
			text: '111111'
		Button:
			font_size: 35
			size_hint: None, None
			width: 200
			height: 75
			text: 'Register'
			on_release: root.register()
		Button:
			font_size: 40
			size_hint: 1, None
			height: 75
			text: 'Sign in >>> '
			on_release: root.sing_in(login.text, password.text)

<UserExists>:
	title: 'Login exists'
	title_align: 'center'
	title_size: 20
	size_hint: 0.5, None
	height: 150
	Button:
		text: 'Ok'
		size_hint: 0.6, 0.7
		on_release: root.dismiss()

<AddContact>:
	auto_dismiss: False
	title: 'Add new contact'
	title_align: 'center'
	title_size: 20
	size_hint: 0.7, 0.7
	GridLayout:
		pos: self.parent.pos
		size: self.parent.size
		cols: 2
		padding: 5
		spacing: 5
		Label:
			text: 'Name:'
		TextInput:
			id: name
			multiline: False
		Label:
			text: 'Second name:'
		TextInput:
			id: second
			multiline: False
		Label:
			text: 'E-mail:'
		TextInput:
			id: email
			multiline: False
		Label:
			text: 'Phone:'
		TextInput:
			id: phone
			multiline: False
		Button:
			size_hint: None, None
			width: 250
			height: 50
			text: 'Cancel'
			on_release: root.dismiss()
		Button:
			id: function
			size_hint: None, None
			width: 250
			height: 50
			text: 'Submit'
			on_release: root.insert(name.text, second.text, email.text, phone.text); root.dismiss()

<Contact>:
	orientation: 'horizontal'
	size_hint: 1, None
	height: 30
	Label:
		id: index 
		text: ''
		color: 0,0,0,1
	Label:
		id: name 
		text: ''
		color: 0,0,0,1
	Label:
		id: second
		text: ''
		color: 0,0,0,1
	Label:
		id: email
		text: ''
		color: 0,0,0,1
	Label:
		id: phone
		text: ''
		color: 0,0,0,1
	Button:
		size_hint: None, 1
		text: "Change"
		on_release:root.change_contact(name.text, second.text, email.text, phone.text)
	Button:
		size_hint: None, 1
		width: 30
		text: 'x'
		on_release: root.remove_contact(name.text, second.text, email.text, phone.text)
